{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "module": "commonjs",

    /* Output Settings */
    "outDir": "./dist",        /* Specify the output folder for all emitted files */
    "rootDir": "./",           /* Specify the root folder of your TypeScript source files */

    /* Interop and Module Resolution */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,        /* Skip type checking all .d.ts files */

    "types": ["node"]
  },
  "include": ["**/*.ts"],       /* Include all TypeScript files in the project */
  "exclude": ["node_modules"]   /* Exclude node_modules directory */
}
